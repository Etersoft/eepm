# List running services
serv_list()
{
	case $SERVICETYPE in
		service-chkconfig|service-upstart)
			sudocmd service --status-all
			;;
		service-upstart)
			sudocmd initctl list
			;;
		service-update)
			sudocmd service --status-all
			;;
		systemd)
			sudocmd systemctl list-units
			;;
		*)
			fatal "Do not known command for $SERVICETYPE"
			;;
	esac
}
