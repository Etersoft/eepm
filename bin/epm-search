# copied from korinf/tools/run-script/scripts/search

epm_search()
{
    [ -n "$pkg_filenames" ] || fatal "Run search without names"

case $PMTYPE in
	apt-rpm|apt-dpkg)
		CMD="apt-cache search"
		;;
	urpm-rpm)
		CMD="urpmq -y"
		;;
	pkg_add)
		CMD="pkg_info -x"
		;;
	emerge)
		CMD="emerge --search"
		;;
	pacman)
		CMD="pacman -Ss"
		;;
	yum-rpm)
		CMD="yum search"
		;;
	zypper-rpm)
		CMD="zypper search"
		;;
	mpkg)
		CMD="mpkg search"
		;;
	slackpkg)
		CMD="/usr/sbin/slackpkg search"
		;;
	*)
		fatal "Do not known search command for $PMTYPE"
		;;
esac

docmd $CMD $pkg_filenames

}
