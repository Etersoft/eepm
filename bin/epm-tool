epm_tool()
{
    local WHAT="$1"
    shift

    case "$WHAT" in
        "")
            fatal "Use epm tool help to get help."
            ;;
        "-h"|"--help"|"help")
cat <<EOF
  Examples:
    epm tool eget
    epm tool estrlist
EOF
            ;;
        "eget")
            showcmd eget "$@"
            eget "$@"
            ;;
        "estrlist")
            showcmd estrlist "$@"
            estrlist "$@"
            ;;
        "json")
            showcmd json "$@"
            $SHAREDIR/tools_json "$@"
            ;;
        *)
            fatal "Unknown command $ epm tool $WHAT. Use epm print help for get help."
            ;;
    esac
}
