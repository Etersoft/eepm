serv_exists()
{
	local SERVICE="$1"
	shift

	case $SERVICETYPE in
		systemd)
			# too direct way: test -s /lib/systemd/system/dm.service
			docmd systemctl cat "$SERVICE" "$@" >/dev/null 2>/dev/null
			;;
		*)
			case $DISTRNAME in
			ALTLinux)
				local INITFILE=/etc/init.d/$SERVICE
				[ -r "$INITFILE" ] || return
				return ;;
			*)
				fatal "Have no suitable for $DISTRNAME command for $SERVICETYPE"
				;;
			esac
	esac
}
